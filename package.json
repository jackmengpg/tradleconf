{
  "name": "@tradle/configure-tradle",
  "version": "1.0.0",
  "main": "index.js",
  "description": "template for building, editing and deploying Tradle models, styles and configuration to your Tradle MyCloud",
  "repository": {
    "type": "git",
    "url": "https://github.com/tradle/configure-tradle"
  },
  "author": "Mark Vayngrib <mark@tradle.io> (http://github.com/mvayngrib)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --quiet --ext .json --ext .js .",
    "validate:models": "validate-model ./models.json --depends-on @tradle/models --depends-on @tradle/custom-models",
    "validate:styles": "node ./validate-styles.js",
    "mergemodels": "npm run lint && pack-models -i ./models -o ./models.json",
    "postpublish": "git push -u",
    "build": "npm run build:styles && npm run build:models",
    "build:models": "npm run mergemodels && npm run validate:models",
    "build:styles": "npm run validate:styles",
    "precommit": "npm run build && git add models.json",
    "predeploy:models": "npm run build:models",
    "deploy:models": "./deploy-models.sh",
    "deploy:styles": "./deploy-styles.sh"
  },
  "keywords": [
    "tradle",
    "models"
  ],
  "bugs": {
    "url": "https://github.com/tradle/configure-tradle/issues"
  },
  "homepage": "https://github.com/tradle/configure-tradle",
  "devDependencies": {
    "@tradle/custom-models": "github:tradle/custom-models#640158c",
    "@tradle/models": "github:tradle/models#d7771ec",
    "@tradle/pack-models": "^2.0.0",
    "@tradle/validate-model": "^4.1.0",
    "eslint": "^3.15.0",
    "eslint-plugin-json": "^1.2.0",
    "git": "^0.1.5",
    "husky": "^0.13.1"
  },
  "dependencies": {
    "@tradle/validate-resource": "^2.13.0",
    "minimist": "^1.2.0",
    "typeforce": "^1.10.6",
    "write-file-atomic": "^1.1.4"
  }
}
